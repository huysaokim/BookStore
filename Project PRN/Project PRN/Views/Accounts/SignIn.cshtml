
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Sign.cshtml";
}


<form class="login100-form validate-form" action="SignIn" method="post">
    @Html.AntiForgeryToken()
    <span class="login100-form-title p-b-34">
        Account Login
    </span>
    <span class="login50-form-title p-b-20 text-danger">@ViewBag.Message</span>
    <div class="wrap-input100 rs1-wrap-input200 validate-input m-b-20" data-validate="Type Email">
        <input id="first-name" class="input100" type="email" name="email" placeholder="Email" value="@ViewData["email"]" required>
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 rs2-wrap-input200 validate-input m-b-20" data-validate="Type password">
        <input class="input100" type="password" name="password" placeholder="Password" required>
        <span class="focus-input100"></span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Sign in
        </button>
    </div>

    <div class="w-full p-t-100 text-center">
        <a href="/Home/Index" class="txt3 p-r-30">
            Back To Home
        </a>
        <a href="SignUp" class="txt3 p-l-30">
            Sign Up
        </a>
    </div>
</form>