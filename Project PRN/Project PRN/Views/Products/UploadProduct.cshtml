
@{
    ViewBag.Title = "UploadProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/axios.js"></script>
    <script>
        new Vue({
            el: '#categories',
            data: {
                categories: []
            },
            mounted: function () {
                axios.get('/Products/GetCategoriesJson')
                    .then(response => {
                        this.categories = response.data;
                        console.log(this.categories);
                    })
                    .catch(error => {
                        console.log(error);
                    })
            }
        })
    </script>
}

<div class="hero-wrap hero-bread" style="background-image: url('/Content/Design Images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-0 bread">Bill Manager</h1>
                <p class="breadcrumbs">
                    <span class="mr-4"><a href="/Manager/ContactManager">Contact Manager</a></span>
                    <span class="mr-4"><a class="" href="/Manager/StaffBillManager">Bill Manager</a></span>
                    <span class="mr-4"><a class="link-active" href="">Upload Product</a></span>
                </p>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 ftco-animate">
                <form action="Create" method="post" class="billing-form" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <h3 class="mb-4 billing-heading">Product Information</h3>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstname">Title</label>
                                <input type="text" name="title" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lastname">Author</label>
                                <input type="text" name="author" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="postcodezip">Image</label><br>
                                <input type="file" name="image" class="form-control-file" placeholder="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="postcodezip">Price</label>
                                <input type="number" name="price" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="postcodezip">Quantity</label>
                                <input type="number" name="quantity" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div id="categories" class="col-md-6">
                            <div class="form-group">
                                <label for="country">Categories</label>
                                <div class="select-wrap">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select name="categoriesID" id="" class="form-control">
                                        <option v-for="c in categories" v-bind:value="c.categoriesID">{{c.categoriesName}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="phone">ShortDescription</label>
                                <textarea class="form-control" name="shortDescription" rows="5" placeholder=""></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="emailaddress">Description</label>
                                <textarea class="form-control" name="description" rows="7" placeholder=""></textarea>
                            </div>
                        </div>
                        <div class="w-100"></div>
                        <input class="btn btn-primary py-3 px-4" type="submit" value="Upload"/>
                    </div>
                </form><!-- END -->


            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->